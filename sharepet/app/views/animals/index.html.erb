<div class="center">
<h1>Pets Availables</h1>
</div>
<% @animals.each do |animal| %>
  <ul class="collection">
    <li class="collection-item avatar">
      <img src="/assets/dog.jpeg" alt="" class="circle">
      <span class="title"><%= link_to animal.name, animal %></span>
      <p>Specie: <%= animal.animalType %>
         [<%= animal.breed %>] <br>
         Age: <%= animal.age %> <br>
      </p>
      <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
    </li>
  </ul>
<% end %>

<div class="center">
  <a href='animals/new'id="download-button" class="btn waves-effect waves-orange teal lighten-1">Share One!</a>
</div>